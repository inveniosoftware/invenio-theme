/*--- Transparent button color ---*/

.ui.button.transparent {
  background-color: transparent;
  color: @transparentButtonTextColor;
  padding: 0;
}

.ui.buttons.relaxed {
  .button{
    &:not(:last-child) {
      margin-right: 0.5em !important;
    }
    border-radius: @borderRadius;
  }
}
