/*******************************
         Site Overrides
*******************************/

.ui.flashed.message {
    margin-top: 0;
    border-radius: 0;
    padding: 2px 0;
}

.flashed.close.icon {
    cursor: pointer;
    position: absolute;
    margin: 0;
    top: 1em;
    right: .5em;
    opacity: .7;
    transition: opacity .1s ease;
}

.ui.success.flashed.message > .ui.grid.container {
  padding-right: 0.5em;
}

.ui.message.code {
  overflow: auto !important;
}
